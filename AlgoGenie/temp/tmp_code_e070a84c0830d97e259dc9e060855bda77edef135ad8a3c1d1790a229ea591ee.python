def add_numbers(num1, num2):
    # Check if both numbers are integers or floats
    if isinstance(num1, (int, float)) and isinstance(num2, (int, float)):
        # Add the numbers and return the result
        return num1 + num2
    else:
        # If not integers or floats, raise a TypeError
        raise TypeError("Both numbers should be integers or floats")

# Test Case 1: Add two integers
print(add_numbers(5, 7))  # Expected Output: 12

# Test Case 2: Add two floats
print(add_numbers(5.5, 7.5))  # Expected Output: 13.0

# Test Case 3: TypeError for a non-integer or float number (string)
try:
    print(add_numbers(5, '7'))
except TypeError as e:
    print(e)  # Expected Output: Both numbers should be integers or floats
