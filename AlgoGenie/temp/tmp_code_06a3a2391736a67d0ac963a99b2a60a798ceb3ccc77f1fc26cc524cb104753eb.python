import sys

def add_numbers(num1=None, num2=None):
    if num1 is None:
        while True:
            user_input = input("Enter the first number: ")
            try:
                num1 = float(user_input)
                break
            except ValueError:
                print("Invalid input. Please enter a valid number.")
    if num2 is None:
        while True:
            user_input = input("Enter the second number: ")
            try:
                num2 = float(user_input)
                break
            except ValueError:
                print("Invalid input. Please enter a valid number.")

    try:
        result = num1 + num2
        print("The sum of the two numbers is: ", result)
    except TypeError:
        print("TypeError: unsupported operand type(s) for +: 'float' and '{}'".format(type(num1)))

# Test cases:
try:
    add_numbers()
except EOFError:
    print("Error: Cannot get input from user.")

try:
    add_numbers('5')
except ValueError:
    print("ValueError: invalid literal for float() with base 10: '5'")

try:
    add_numbers(-3.5, 2.5)
except TypeError:
    print("TypeError: unsupported operand type(s) for +: 'float' and '{}'".format(type(-3.5)))

class AddNumbersTest:
    def test_add_numbers(self):
        try:
            result = add_numbers(1, 4)
            self.assertEqual(5.0, result)
        except TypeError:
            print("TypeError: unsupported operand type(s) for +: 'float' and '{}'".format(type(1)))

test = AddNumbersTest()
test.test_add_numbers()
