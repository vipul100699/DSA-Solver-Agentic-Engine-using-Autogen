import sys

def add_numbers(num1=None, num2=None):
    if num1 is None:
        try:
            num1 = float(input("Enter the first number: "))
        except EOFError:
            print("Invalid input. Please enter a valid number.")
            sys.exit(1)
    if num2 is None:
        try:
            num2 = float(input("Enter the second number: "))
        except EOFError:
            print("Invalid input. Please enter a valid number.")
            sys.exit(1)

    try:
        result = float(num1) + float(num2)
        print("The sum of the two numbers is: ", result)
    except ValueError:
        print("Invalid input. Please enter a valid number.")

# Test cases:
add_numbers()
try:
    add_numbers('5')
except ValueError:
    print("ValueError: invalid literal for float() with base 10: '5'")

try:
    add_numbers(-3.5, 2.5)
except TypeError:
    print("TypeError: add_numbers() missing 1 required positional argument: 'num2'")

class AddNumbersTest:
    def test_add_numbers(self):
        self.assertRaises(TypeError, add_numbers)
        self.assertRaises(TypeError, add_numbers(1))
        self.assertEqual(5, add_numbers(1, 4))

test = AddNumbersTest()
test.test_add_numbers()
