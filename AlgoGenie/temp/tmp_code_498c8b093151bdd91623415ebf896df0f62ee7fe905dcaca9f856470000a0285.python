def add_numbers():
    num1 = input("Enter the first number: ")
    num2 = input("Enter the second number: ")

    try:
        result = float(num1) + float(num2)
        print("The sum of the two numbers is: ", result)
    except ValueError:
        print("Invalid input. Please enter a valid number.")

# Test cases:
add_numbers()
add_numbers(5, 7)
add_numbers(-3.5, 2.5)

class AddNumbersTest:
    def test_add_numbers(self):
        self.assertEqual(7, float(add_numbers(3, 4)))
        self.assertEqual(-1.0, float(add_numbers(-1, 0.1)))
        self.assertEqual(1, float(add_numbers(0.1, 0.9)))

test = AddNumbersTest()
test.test_add_numbers()
